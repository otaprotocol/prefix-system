{
  "name": "@actioncodes/prefix-system",
  "description": "Prefix System for Action Codes Protocol",
  "author": "Trana Inc.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/otaprotocol/prefix-system"
  },
  "scripts": {
    "build": "anchor build && npm run copy-idl",
    "copy-idl": "mkdir -p sdk/idl && cp target/idl/prefix_system.json sdk/src/idl/ && cp target/types/prefix_system.ts sdk/src/idl/",
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "test:sdk": "ts-mocha --paths sdk/src/**/*.test.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@solana/web3.js": "^1.98.4",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/bn.js": "^5.2.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^9.1.1",
    "chai": "^4.5.0",
    "husky": "^9.1.7",
    "mocha": "^9.2.2",
    "prettier": "^2.8.8",
    "ts-mocha": "^10.1.0",
    "typescript": "^5.9.2"
  }
}
